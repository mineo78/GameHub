    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>

    <script type="text/javascript">
        $(function () {
            const i18n = {
                tie: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.Tie"].Value)",
                winnerWon: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.WinnerWon"].Value)", // "{0}"
                commError: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.CommunicationError"].Value)",
                yourTurn: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.YourTurn"].Value)",
                turnOf: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.TurnOf"].Value)", // "{0}"
                connectionError: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Puissance4.Game.ConnectionError"].Value)"
            };

            const lobbyId = '@ViewBag.LobbyId';
            const currentPlayer = '@ViewBag.CurrentPlayer';
            let currentGame = null;
            let myColor = null;
            let moveCount = 0;

            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/puissance4Hub")
                .configureLogging(signalR.LogLevel.Information)
                .build();

            connection.on("GameStart", function (gameData) {
                currentGame = gameData;
                myColor = gameData.player1.name === currentPlayer 
                    ? gameData.player1.color 
                    : gameData.player2.color;

                $('#usernameSection').addClass('hidden');
                $('#gameContainer').removeClass('hidden');
                $('#historyPanel').removeClass('hidden');

                // Initialiser l'historique
                $('#historyList').html('');
                moveCount = 0;
                addHistoryItem({
                    timestamp: new Date().toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit', second: '2-digit'}),
                    playerName: 'Syst√®me',
                    description: 'Partie d√©marr√©e',
                    color: null
                });

                $('#player1Name').text(gameData.player1.name);
                $('#player2Name').text(gameData.player2.name);

                buildBoard(gameData.board);
                buildColumnIndicator();
                updateStatus(gameData.currentPlayer);
            });

            // Recevoir les actions pour l'historique en temps r√©el
            connection.on("ActionLogged", function (action) {
                addHistoryItem(action);
            });

            function addHistoryItem(action) {
                moveCount++;
                const colorClass = action.color === 'Rouge' ? 'red' : (action.color === 'Jaune' ? 'cyan' : '');
                const playerColorClass = action.color === 'Rouge' ? 'red' : (action.color === 'Jaune' ? 'cyan' : '');
                
                const html = `
                    <div class="history-item ${colorClass}">
                        <span class="history-time">${action.timestamp}</span>
                        <span class="history-player ${playerColorClass}">${action.playerName}</span>
                        <span class="history-action">${action.description}</span>
                    </div>
                `;
                
                $('#historyList').prepend(html);
                $('#moveCount').text(moveCount + ' coup' + (moveCount > 1 ? 's' : ''));
            }

            connection.on("PiecePlaced", function (moveData) {
                updateCell(moveData.row, moveData.column, moveData.color);
            });

            connection.on("UpdateTurn", function (turnData) {
                updateStatus(turnData.currentPlayer);
            });

            connection.on("GameOver", function (result) {
                disableBoard();
                
                if (result.isTie) {
                    setStatus("ü§ù " + i18n.tie, false);
                } else {
                    const emoji = result.winnerColor === "Rouge" ? "üî¥" : "üü¢";
                    setStatus(`${emoji} ${i18n.winnerWon.replace("{0}", result.winner)}`, false);
                }

                hideColumnIndicator();
                
                // Afficher le panel de rejeu apr√®s 1 seconde
                setTimeout(() => {
                    $('#rematchPanel').removeClass('hidden');
                }, 1000);
            });

            connection.on("NotYourTurn", function (message) {
                setStatus("‚ö†Ô∏è " + message, false);
                shakeBoard();
            });

            connection.on("InvalidMove", function (message) {
                setStatus("‚ö†Ô∏è " + message, false);
                shakeBoard();
            });

            connection.on("Error", function (message) {
                setStatus("‚ùå " + message, false);
            });

            function shakeBoard() {
                $('#gameBoard').css('animation', 'shake 0.5s');
                setTimeout(() => $('#gameBoard').css('animation', ''), 500);
            }

            connection.on("OpponentLeft", function (data) {
                setStatus("üòî " + data.message, false);
                disableBoard();
                hideColumnIndicator();
                
                // Afficher un message et rediriger apr√®s quelques secondes
                setTimeout(() => {
                    alert("Votre adversaire a quitt√© la partie. Vous allez √™tre redirig√© vers le lobby.");
                    window.location.href = `/Lobby?gameType=Puissance4`;
                }, 1000);
            });

            function setStatus(text, searching) {
                const status = $('#status');
                status.html(searching ? text + '<br><div class="loading-dots"><span></span><span></span><span></span></div>' : text);
                status.toggleClass('highlight', searching);
            }

            function buildBoard(boardData) {
                const board = $('#gameBoard');
                board.empty();

                for (let row = 0; row < 6; row++) {
                    const rowDiv = $('<div class="board-row"></div>');
                    for (let col = 0; col < 7; col++) {
                        const cell = $(`<div class="board-cell" data-row="${row}" data-col="${col}"></div>`);
                        
                        if (boardData[row][col] !== "Empty") {
                            cell.addClass(boardData[row][col]);
                        }

                        cell.click(function () {
                            placePiece($(this).data('col'));
                        });

                        cell.hover(
                            function() { highlightColumn($(this).data('col'), true); },
                            function() { highlightColumn($(this).data('col'), false); }
                        );

                        rowDiv.append(cell);
                    }
                    board.append(rowDiv);
                }
            }

            function buildColumnIndicator() {
                const indicator = $('#columnIndicator');
                indicator.empty();
                for (let i = 0; i < 7; i++) {
                    indicator.append('<span class="col-arrow">‚ñº</span>');
                }
            }

            function highlightColumn(col, highlight) {
                const arrows = $('#columnIndicator .col-arrow');
                arrows.eq(col).toggleClass('active', highlight);
            }

            function hideColumnIndicator() {
                $('#columnIndicator .col-arrow').removeClass('active');
            }

            function updateCell(row, col, color) {
                const cell = $(`.board-cell[data-row="${row}"][data-col="${col}"]`);
                cell.addClass(color);
            }

            function placePiece(column) {
                if (!currentGame) return;
                
                connection.invoke("PlacePiece", lobbyId, currentPlayer, parseInt(column)).catch(function (err) {
                    console.error("Error:", err);
                    setStatus("‚ùå " + i18n.commError, false);
                });
            }

            function updateStatus(currentPlayerName) {
                const isMyTurn = (currentPlayer === currentPlayerName);
                const emoji = currentPlayerName === currentGame.player1.name ? "üî¥" : "üü¢";
                
                if (isMyTurn) {
                    setStatus(`${emoji} ${i18n.yourTurn}`, false);
                } else {
                    setStatus(`${emoji} ${i18n.turnOf.replace("{0}", currentPlayerName)}`, false);
                }
            }

            function disableBoard() {
                $('.board-cell').addClass('disabled').off('click').off('mouseenter mouseleave');
            }

            // ========================
            // REMATCH SYSTEM
            // ========================
            
            // Connexion au LobbyHub pour le syst√®me de rejeu
            const lobbyConnection = new signalR.HubConnectionBuilder()
                .withUrl("/lobbyHub")
                .withAutomaticReconnect()
                .build();

            lobbyConnection.on("RematchVoteReceived", function (data) {
                $('#rematchVotes').html(`<span style="color: #4ecdc4;">‚úì ${data.votesCount}/${data.totalPlayers} joueurs veulent rejouer</span>`);
                
                // Si le joueur actuel a d√©j√† vot√©, d√©sactiver le bouton
                if (data.votes.includes(currentPlayer)) {
                    $('#btnRematch').prop('disabled', true).css('opacity', '0.5').text('‚úì Vote enregistr√©');
                }
            });

            lobbyConnection.on("RematchDeclined", function (data) {
                $('#rematchStatus').html(`<span style="color: #ff6b6b;">${data.message}</span>`);
            });

            lobbyConnection.on("RematchStarting", function (data) {
                $('#rematchStatus').html(`<span style="color: #4ecdc4;">üéÆ ${data.message}</span>`);
                $('#rematchButtons').hide();
            });

            lobbyConnection.on("GoToRoom", function (data) {
                // Rediriger vers la salle du nouveau lobby
                window.location.href = `/Lobby/Room/${data.newLobbyId}`;
            });

            lobbyConnection.on("ReturnToLobby", function (data) {
                alert(data.message);
                window.location.href = `/Lobby?gameType=Puissance4`;
            });

            // D√©marrer la connexion au LobbyHub
            lobbyConnection.start().then(function () {
                lobbyConnection.invoke("JoinLobbyGroup", lobbyId);
            }).catch(function (err) {
                console.error("LobbyHub connection error:", err);
            });

            // Fonctions globales pour les boutons
            window.requestRematch = function() {
                lobbyConnection.invoke("RequestRematch", lobbyId, currentPlayer).catch(function (err) {
                    console.error("Error requesting rematch:", err);
                });
            };

            window.declineRematch = function() {
                lobbyConnection.invoke("DeclineRematch", lobbyId, currentPlayer).catch(function (err) {
                    console.error("Error declining rematch:", err);
                });
                // Cacher les boutons pour ce joueur
                $('#rematchButtons').html('<p style="color: #a0aec0;">Vous avez refus√©. En attente des autres joueurs...</p>');
            };

            window.backToLobby = function() {
                window.location.href = `/Lobby?gameType=Puissance4`;
            };

            connection.start().then(function () {
                connection.invoke("JoinLobbyGroup", lobbyId, currentPlayer).then(() => {
                    // Enregistrer le joueur pour la d√©tection de d√©connexion
                    connection.invoke("RegisterPlayer", lobbyId, currentPlayer);
                });
            }).catch(function (err) {
                setStatus("‚ùå " + i18n.connectionError, false);
            });
        });
    </script>
