@model dynamic
@{
    ViewData["Title"] = Localizer["Game.Morpion.Title"].Value;
    var lobbyId = ViewBag.LobbyId;
    var playerName = ViewBag.PlayerName;
}

@section Styles {
    <!-- Font Awesome pour les ic√¥nes (si pas d√©j√† dans _Layout) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    
    <style>
        /* === STYLE MODERNE TYPE PUISSANCE 4 === */
        
        /* Background Particles */
        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: -1;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        /* Container principal */
        .game-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Titre & Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }

        .player-info {
            color: #a0aec0;
            font-size: 1.1rem;
        }

        /* Carte de statut (Glassmorphism) */
        .status-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            padding: 20px 30px;
            backdrop-filter: blur(10px);
            margin-bottom: 30px;
            width: 100%;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            color: #e0e0e0;
        }

        .status-card h3 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 500;
        }

        .status-notice {
            margin-top: 10px;
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.85);
            opacity: 0;
            transform: translateY(4px);
            transition: opacity 180ms ease, transform 180ms ease;
        }

        .status-notice.show {
            opacity: 1;
            transform: translateY(0);
        }

        .status-notice.warning { color: #ffcf66; }
        .status-notice.danger { color: #ff6b6b; }
        .status-notice.success { color: #4ecdc4; }

        /* Plateau de jeu */
        #board {
            background: rgba(15, 15, 26, 0.6);
            padding: 20px;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 25px 50px rgba(0,0,0,0.5);
        }

        table {
            border-collapse: separate;
            border-spacing: 10px;
            margin: 0 auto;
        }

        table td {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            text-align: center;
            vertical-align: middle;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: inset 0 2px 4px rgba(0,0,0,0.3);
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        table td:hover {
            transform: translateY(-2px);
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Couleurs X et O */
        /* Note: Handlebars injecte le texte brute, on peut styliser si besoin */
        
        .text-success { color: #4ecdc4 !important; }
        .text-warning { color: #ff6b6b !important; }

        /* Hidden class */
        .hidden { display: none !important; }

        /* History Panel Styles */
        #historyList {
            scrollbar-width: thin;
            scrollbar-color: rgba(78, 205, 196, 0.3) transparent;
        }
        
        #historyList::-webkit-scrollbar {
            width: 6px;
        }
        
        #historyList::-webkit-scrollbar-track {
            background: transparent;
        }
        
        #historyList::-webkit-scrollbar-thumb {
            background: rgba(78, 205, 196, 0.3);
            border-radius: 3px;
        }
        
        .history-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 12px;
            margin-bottom: 6px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 8px;
            border-left: 3px solid;
            font-size: 0.9rem;
            animation: slideIn 0.3s ease-out;
        }
        
        .history-item.x-piece { border-color: #ff6b6b; }
        .history-item.o-piece { border-color: #4ecdc4; }
        
        .history-time {
            color: #6b7280;
            font-size: 0.75rem;
            min-width: 55px;
        }
        
        .history-player {
            font-weight: 600;
        }
        
        .history-player.x-piece { color: #ff6b6b; }
        .history-player.o-piece { color: #4ecdc4; }
        
        .history-action {
            color: #a0aec0;
        }
        
        @@keyframes slideIn {
            from { opacity: 0; transform: translateX(-10px); }
            to { opacity: 1; transform: translateX(0); }
        }
    </style>
}

<!-- Background Particles -->
<div class="bg-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div class="game-container">
    <div class="header">
        <h1>@Localizer["Game.Morpion.Title"]</h1>
        <p class="player-info">@Localizer["Morpion.Game.PlayerLabel"] : <strong>@playerName</strong></p>
    </div>

    <div class="status-card">
        <h3><i class="fa-solid fa-gamepad"></i> @Localizer["Common.Status"]: <span id="status">@Localizer["Common.Connecting"]</span></h3>
        <div id="statusNotice" class="status-notice" aria-live="polite"></div>
    </div>

    <div id="board"></div>

    <!-- History Panel -->
    <div id="historyPanel" style="margin-top: 20px; width: 100%; max-width: 400px;">
        <div class="status-card" style="max-height: 250px; overflow: hidden;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                <h3 style="margin: 0; color: #4ecdc4; font-size: 1rem;">
                    üìú Historique des coups
                </h3>
                <span id="moveCount" style="color: #6b7280; font-size: 0.85rem;">0 coups</span>
            </div>
            <div id="historyList" style="max-height: 180px; overflow-y: auto; padding-right: 10px;">
                <p style="color: #6b7280; font-size: 0.9rem; text-align: center;">En attente du d√©but de la partie...</p>
            </div>
        </div>
    </div>

    <!-- Rematch Panel (Initially Hidden) -->
    <div id="rematchPanel" class="hidden" style="margin-top: 30px; width: 100%;">
        <div class="status-card" style="text-align: center;">
            <h3 style="margin-bottom: 15px; color: #4ecdc4;">üéÆ Rejouer ?</h3>
            <p id="rematchStatus" style="margin-bottom: 20px; color: #a0aec0;">Voulez-vous faire une revanche avec les m√™mes joueurs ?</p>
            
            <div id="rematchVotes" style="margin-bottom: 15px; font-size: 0.9rem; color: #6b7280;"></div>
            
            <div id="rematchButtons" style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
                <button id="btnRematch" onclick="requestRematch()" style="padding: 12px 30px; background: linear-gradient(135deg, #4ecdc4, #3dbdb5); border: none; border-radius: 12px; color: #fff; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                    ‚úì Rejouer
                </button>
                <button id="btnDecline" onclick="declineRematch()" style="padding: 12px 30px; background: transparent; border: 2px solid rgba(255, 107, 107, 0.5); border-radius: 12px; color: #ff6b6b; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                    ‚úó Non merci
                </button>
                <button id="btnBackToLobby" onclick="backToLobby()" style="padding: 12px 30px; background: transparent; border: 2px solid rgba(255, 255, 255, 0.2); border-radius: 12px; color: #a0aec0; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                    ‚Üê Retour au lobby
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.4/signalr.min.js"></script>

    <!-- Handlebars Template (Adapt√© pour ne plus utiliser de bordures noires moches) -->
    <script id="board-template" type="text/x-handlebars-template">
        <table>
            <tbody>
                {{#each pieces}}
                <tr>
                    {{#each this}}
                    <td id="pos-{{@@../index}}-{{@@index}}" onclick="makeMove({{@@../index}}, {{@@index}})">{{this}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </script>

    <script>
        // === TON CODE ORIGINAL INCHANG√â (Juste adapt√© les s√©lecteurs si besoin) ===
        const i18n = {
            connected: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.Connected"].Value)",
            waitingOpponent: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.WaitingOpponent"].Value)",
            gameStartsTurn: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.GameStartsTurn"].Value)", // "{0}"
            turnOf: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.TurnOf"].Value)", // "{0}"
            winnerIs: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.WinnerIs"].Value)", // "{0}"
            playerWon: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.PlayerWon"].Value)", // "{0}"
            tie: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.Tie"].Value)",
            notYourTurn: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.NotYourTurn"].Value)",
            invalidMove: "@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Localizer["Morpion.Game.InvalidMove"].Value)"
        };
        
        const lobbyId = '@lobbyId';
        const username = '@playerName';
        let moveCount = 0;
        
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/morpionHub")
            .withAutomaticReconnect()
            .build();

        const template = Handlebars.compile($("#board-template").html());

        // Fonction pour ajouter un √©l√©ment √† l'historique
        function addHistoryItem(action) {
            moveCount++;
            const pieceClass = action.piece === 'X' ? 'x-piece' : (action.piece === 'O' ? 'o-piece' : '');
            
            const html = `
                <div class="history-item ${pieceClass}">
                    <span class="history-time">${action.timestamp}</span>
                    <span class="history-player ${pieceClass}">${action.playerName}</span>
                    <span class="history-action">${action.description}</span>
                </div>
            `;
            
            $('#historyList').prepend(html);
            $('#moveCount').text(moveCount + ' coup' + (moveCount > 1 ? 's' : ''));
        }

        connection.start().then(() => {
            console.log(i18n.connected);
            connection.invoke("JoinGame", lobbyId, username);
        }).catch(err => console.error(err));

        connection.on("waitingForOpponent", () => {
            $("#status").text(i18n.waitingOpponent);
        });

        connection.on("start", (game) => {
            console.log(game);
            $("#status").text(i18n.gameStartsTurn.replace("{0}", game.whoseTurn.name));
            renderBoard(game.board);
            
            // Initialiser l'historique
            $('#historyList').html('');
            moveCount = 0;
            addHistoryItem({
                timestamp: new Date().toLocaleTimeString('fr-FR', {hour: '2-digit', minute: '2-digit', second: '2-digit'}),
                playerName: 'Syst√®me',
                description: 'Partie d√©marr√©e',
                piece: null
            });
        });

        // Recevoir les actions pour l'historique en temps r√©el
        connection.on("ActionLogged", function (action) {
            addHistoryItem(action);
        });

        connection.on("piecePlaced", (row, col, piece) => {
            // Petite touche esth√©tique : couleur selon la pi√®ce
            const el = $(`#pos-${row}-${col}`);
            el.text(piece);
            if (piece === 'X') el.css('color', '#ff6b6b'); // Rouge
            if (piece === 'O') el.css('color', '#4ecdc4'); // Cyan
        });

        connection.on("updateTurn", (game) => {
            $("#status").text(i18n.turnOf.replace("{0}", game.whoseTurn.name));
        });

        connection.on("winner", (winnerName) => {
            $("#status").html(`<span class="text-success">${i18n.winnerIs.replace("{0}", winnerName)}</span>`);
            // Afficher le panel de rejeu apr√®s 1 seconde
            setTimeout(() => {
                $('#rematchPanel').removeClass('hidden');
            }, 1000);
        });

        connection.on("tieGame", () => {
            $("#status").text(i18n.tie);
            // Afficher le panel de rejeu apr√®s 1 seconde
            setTimeout(() => {
                $('#rematchPanel').removeClass('hidden');
            }, 1000);
        });
        
        connection.on("notPlayersTurn", () => {
            showNotice(i18n.notYourTurn, "warning");
        });
        
        connection.on("notValidMove", () => {
            alert(i18n.invalidMove);
        });

        // Gestion de la d√©connexion de l'adversaire
        connection.on("opponentLeft", () => {
            $("#status").html(`<span class="text-warning">üòî Votre adversaire a quitt√© la partie.</span>`);
            // D√©sactiver le plateau
            $("table td").off("click").css("cursor", "not-allowed");
            
            // Afficher un message et rediriger apr√®s quelques secondes
            setTimeout(() => {
                alert("Votre adversaire a quitt√© la partie. Vous allez √™tre redirig√© vers le lobby.");
                window.location.href = `/Lobby?gameType=Morpion`;
            }, 1000);
        });

        let noticeTimer = null;
        function showNotice(message, kind = "warning", timeoutMs = 2500) {
            const el = document.getElementById("statusNotice");
            if (!el) return;

            el.textContent = message;
            el.classList.remove("warning", "danger", "success", "show");
            el.classList.add(kind);
            // force reflow for transition
            void el.offsetWidth;
            el.classList.add("show");

            if (noticeTimer) clearTimeout(noticeTimer);
            noticeTimer = setTimeout(() => {
                el.classList.remove("show");
            }, timeoutMs);
        }

        function renderBoard(board) {
            $("#board").html(template(board));
            
            // Appliquer les couleurs apr√®s le rendu initial
            board.pieces.forEach((row, rIndex) => {
                row.forEach((piece, cIndex) => {
                    if (piece === 'X') $(`#pos-${rIndex}-${cIndex}`).css('color', '#ff6b6b');
                    if (piece === 'O') $(`#pos-${rIndex}-${cIndex}`).css('color', '#4ecdc4');
                });
            });
        }

        function makeMove(row, col) {
            connection.invoke("PlacePiece", row, col).catch(err => console.error(err));
        }

        // ========================
        // REMATCH SYSTEM
        // ========================
        
        // Connexion au LobbyHub pour le syst√®me de rejeu
        const lobbyConnection = new signalR.HubConnectionBuilder()
            .withUrl("/lobbyHub")
            .withAutomaticReconnect()
            .build();

        lobbyConnection.on("RematchVoteReceived", function (data) {
            $('#rematchVotes').html(`<span style="color: #4ecdc4;">‚úì ${data.votesCount}/${data.totalPlayers} joueurs veulent rejouer</span>`);
            
            // Si le joueur actuel a d√©j√† vot√©, d√©sactiver le bouton
            if (data.votes.includes(username)) {
                $('#btnRematch').prop('disabled', true).css('opacity', '0.5').text('‚úì Vote enregistr√©');
            }
        });

        lobbyConnection.on("RematchDeclined", function (data) {
            $('#rematchStatus').html(`<span style="color: #ff6b6b;">${data.message}</span>`);
        });

        lobbyConnection.on("RematchStarting", function (data) {
            $('#rematchStatus').html(`<span style="color: #4ecdc4;">üéÆ ${data.message}</span>`);
            $('#rematchButtons').hide();
        });

        lobbyConnection.on("GoToRoom", function (id) {
            window.location.href = `/Lobby?gameType=Morpion`;
        });

        lobbyConnection.on("ReturnToLobby", function (data) {
            alert(data.message);
            window.location.href = `/Lobby?gameType=Morpion`;
        });

        // D√©marrer la connexion au LobbyHub
        lobbyConnection.start().then(function () {
            lobbyConnection.invoke("JoinLobbyGroup", lobbyId);
        }).catch(function (err) {
            console.error("LobbyHub connection error:", err);
        });

        // Fonctions globales pour les boutons
        window.requestRematch = function() {
            lobbyConnection.invoke("RequestRematch", lobbyId, username).catch(function (err) {
                console.error("Error requesting rematch:", err);
            });
        };

        window.declineRematch = function() {
            lobbyConnection.invoke("DeclineRematch", lobbyId, username).catch(function (err) {
                console.error("Error declining rematch:", err);
            });
            // Cacher les boutons pour ce joueur
            $('#rematchButtons').html('<p style="color: #a0aec0;">Vous avez refus√©. En attente des autres joueurs...</p>');
        };

        window.backToLobby = function() {
            window.location.href = `/Lobby?gameType=Morpion`;
        };
    </script>
}
