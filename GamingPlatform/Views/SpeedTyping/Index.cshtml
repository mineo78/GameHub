@model IEnumerable<GamingPlatform.Models.GameLobby>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speed Typing - Lobbies</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            color: #e0e0e0;
            overflow-x: hidden;
        }

        .bg-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: rgba(255, 107, 107, 0.3);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .particle:nth-child(2) { left: 20%; animation-delay: -2s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(3) { left: 40%; animation-delay: -4s; }
        .particle:nth-child(4) { left: 60%; animation-delay: -6s; background: rgba(78, 205, 196, 0.3); }
        .particle:nth-child(5) { left: 80%; animation-delay: -8s; }

        @@keyframes float {
            0%, 100% { transform: translateY(100vh) scale(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-10vh) scale(1); opacity: 0; }
        }

        .container {
            position: relative;
            z-index: 1;
            padding: 40px 20px;
        }

        h1, h2 {
            background: linear-gradient(135deg, #fff 0%, #a5b4fc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        .card {
            background: rgba(26, 26, 46, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            color: #e0e0e0;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 48px rgba(78, 205, 196, 0.2);
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6b6b, #ff8787);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #ff5252, #ff6b6b);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
        }

        .form-control {
            background: rgba(15, 15, 26, 0.6);
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: #e0e0e0;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(15, 15, 26, 0.8);
            border-color: #4ecdc4;
            box-shadow: 0 0 20px rgba(78, 205, 196, 0.3);
            color: #e0e0e0;
        }

        .form-control::placeholder {
            color: rgba(224, 224, 224, 0.5);
        }

        .list-group-item {
            background: rgba(15, 15, 26, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #e0e0e0;
            padding: 16px;
            margin-bottom: 8px;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .list-group-item:hover {
            background: rgba(78, 205, 196, 0.1);
            border-color: #4ecdc4;
            transform: translateX(5px);
        }

        .list-group-item a {
            color: #4ecdc4;
            text-decoration: none;
            font-weight: 500;
        }

        .badge {
            background: linear-gradient(135deg, #4ecdc4, #44a3a0);
            border-radius: 8px;
            padding: 6px 12px;
            font-weight: 500;
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        .lead {
            color: rgba(224, 224, 224, 0.8);
        }
    </style>
</head>
<body>
    <div class="bg-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <div class="container py-5">
        <!-- Title -->
        <div class="text-center mb-5">
            <h1 class="display-4">Liste des Lobbys</h1>
            <p class="lead">Rejoignez un lobby existant ou créez-en un nouveau pour commencer à jouer.</p>
        </div>

        <div class="row">
            <!-- Create Lobby -->
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fa-solid fa-plus-circle"></i> Créer une partie</h2>
                        <form method="post" action="@Url.Action("Create", "Lobby")" class="mt-4">
                            <input type="hidden" name="gameType" value="SpeedTyping" />
                            <div class="mb-3">
                                <label for="lobbyName" class="form-label">Nom de la partie :</label>
                                <input type="text" id="lobbyName" name="name" class="form-control" placeholder="Ex: Partie rapide" required>
                            </div>
                            <div class="mb-3">
                                <label for="playerName" class="form-label">Votre pseudo :</label>
                                <input type="text" id="playerName" name="playerName" class="form-control" placeholder="Entrez votre pseudo" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fa-solid fa-check"></i> Créer
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Lobby List -->
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><i class="fa-solid fa-list"></i> Parties disponibles</h2>
                        @if (!Model.Any())
                        {
                            <p class="text-muted mt-3">Aucune partie disponible.</p>
                        }
                        else
                        {
                            <ul id="lobbyList" class="list-group mt-3">
                                @foreach (var lobby in Model)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="mb-1">@lobby.Name</h5>
                                                <small>Hôte: @lobby.HostName | Joueurs: @lobby.Players.Count/@lobby.MaxPlayers</small>
                                            </div>
                                            <form method="post" action="@Url.Action("Join", "Lobby")" class="d-flex gap-2">
                                                <input type="hidden" name="lobbyId" value="@lobby.Id" />
                                                <input type="text" name="playerName" class="form-control form-control-sm" placeholder="Pseudo" required style="width: 120px;" />
                                                <button type="submit" class="btn btn-success btn-sm">Rejoindre</button>
                                            </form>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>
</html>
