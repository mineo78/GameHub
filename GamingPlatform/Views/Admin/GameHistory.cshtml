@model IEnumerable<GamingPlatform.Models.GameHistory>
@{
    ViewData["Title"] = "Historique des parties";
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .admin-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .admin-header h1 {
            font-weight: 800;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 25px;
            backdrop-filter: blur(10px);
            margin-bottom: 20px;
        }

        .filter-form {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: end;
        }

        .filter-group {
            flex: 1;
            min-width: 150px;
        }

        .filter-group label {
            display: block;
            color: #a0aec0;
            font-size: 0.85rem;
            margin-bottom: 5px;
        }

        .filter-group input, .filter-group select {
            width: 100%;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
        }

        .filter-group input:focus, .filter-group select:focus {
            outline: none;
            border-color: #4ecdc4;
        }

        .btn-filter {
            padding: 10px 25px;
            border-radius: 8px;
            border: none;
            background: linear-gradient(135deg, #4ecdc4, #3dbdb5);
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-filter:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(78, 205, 196, 0.3);
        }

        .btn-export {
            padding: 10px 25px;
            border-radius: 8px;
            border: none;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        .history-table {
            width: 100%;
            border-collapse: collapse;
        }

        .history-table th {
            text-align: left;
            padding: 15px;
            color: #a0aec0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-weight: 600;
        }

        .history-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            color: #e0e0e0;
        }

        .history-table tr:hover {
            background: rgba(255, 255, 255, 0.03);
        }

        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .badge-morpion { background: rgba(255, 107, 107, 0.2); color: #ff6b6b; }
        .badge-puissance4 { background: rgba(78, 205, 196, 0.2); color: #4ecdc4; }
        .badge-speedtyping { background: rgba(102, 126, 234, 0.2); color: #667eea; }

        .badge-win { background: rgba(72, 187, 120, 0.2); color: #48bb78; }
        .badge-tie { background: rgba(237, 137, 54, 0.2); color: #ed8936; }
        .badge-ongoing { background: rgba(66, 153, 225, 0.2); color: #4299e1; }

        .btn-details {
            padding: 6px 15px;
            border-radius: 6px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 0.85rem;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .btn-details:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .stats-row {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            flex: 1;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }

        .stat-card h3 {
            font-size: 2rem;
            margin: 0;
            background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .stat-card p {
            margin: 5px 0 0;
            color: #a0aec0;
            font-size: 0.9rem;
        }

        .no-data {
            text-align: center;
            padding: 60px;
            color: #a0aec0;
        }

        .no-data i {
            font-size: 3rem;
            margin-bottom: 15px;
            opacity: 0.5;
        }
    </style>
}

<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fa-solid fa-clock-rotate-left"></i> Historique des parties</h1>
        <p style="color: #a0aec0;">Consultez l'historique complet des actions pour chaque partie</p>
    </div>

    <!-- Statistiques -->
    <div class="stats-row">
        <div class="stat-card">
            <h3>@Model.Count()</h3>
            <p>Parties totales</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(h => h.GameType == "Morpion")</h3>
            <p>Morpion</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(h => h.GameType == "Puissance4")</h3>
            <p>Puissance 4</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(h => h.GameType == "SpeedTyping")</h3>
            <p>Speed Typing</p>
        </div>
    </div>

    <!-- Filtres -->
    <div class="glass-card">
        <form method="get" class="filter-form">
            <div class="filter-group">
                <label>Type de jeu</label>
                <select name="gameType">
                    <option value="">Tous</option>
                    @{
                        var gameTypes = new[] { "Morpion", "Puissance4", "SpeedTyping" };
                        var gameTypeLabels = new[] { "Morpion", "Puissance 4", "Speed Typing" };
                        for (int i = 0; i < gameTypes.Length; i++)
                        {
                            if (ViewBag.GameType == gameTypes[i])
                            {
                                <option value="@gameTypes[i]" selected>@gameTypeLabels[i]</option>
                            }
                            else
                            {
                                <option value="@gameTypes[i]">@gameTypeLabels[i]</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="filter-group">
                <label>Joueur</label>
                <input type="text" name="playerName" value="@ViewBag.PlayerName" placeholder="Nom du joueur" />
            </div>
            <div class="filter-group">
                <label>Date d√©but</label>
                <input type="date" name="fromDate" value="@ViewBag.FromDate" />
            </div>
            <div class="filter-group">
                <label>Date fin</label>
                <input type="date" name="toDate" value="@ViewBag.ToDate" />
            </div>
            <button type="submit" class="btn-filter">
                <i class="fa-solid fa-filter"></i> Filtrer
            </button>
            <a href="@Url.Action("ExportAllJson")" class="btn-export">
                <i class="fa-solid fa-download"></i> Exporter tout
            </a>
        </form>
    </div>

    <!-- Liste des parties -->
    <div class="glass-card">
        @if (!Model.Any())
        {
            <div class="no-data">
                <i class="fa-regular fa-folder-open"></i>
                <p>Aucune partie trouv√©e</p>
            </div>
        }
        else
        {
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Jeu</th>
                        <th>Lobby</th>
                        <th>Joueurs</th>
                        <th>R√©sultat</th>
                        <th>Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var history in Model)
                    {
                        <tr>
                            <td>@history.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @{
                                    var badgeClass = history.GameType switch
                                    {
                                        "Morpion" => "badge-morpion",
                                        "Puissance4" => "badge-puissance4",
                                        "SpeedTyping" => "badge-speedtyping",
                                        _ => ""
                                    };
                                }
                                <span class="badge @badgeClass">@history.GameType</span>
                            </td>
                            <td>@history.LobbyName</td>
                            <td>@string.Join(", ", history.Players)</td>
                            <td>
                                @if (history.EndedAt == null)
                                {
                                    <span class="badge badge-ongoing">En cours</span>
                                }
                                else if (history.IsTie)
                                {
                                    <span class="badge badge-tie">Match nul</span>
                                }
                                else
                                {
                                    <span class="badge badge-win">üèÜ @history.Winner</span>
                                }
                            </td>
                            <td>@history.Actions.Count actions</td>
                            <td>
                                <a href="@Url.Action("GameDetails", new { id = history.LobbyId })" class="btn-details">
                                    <i class="fa-solid fa-eye"></i> D√©tails
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
